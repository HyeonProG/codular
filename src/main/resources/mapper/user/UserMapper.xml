<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.codular.domain.user.mapper.UserMapper">
    <!--  User 테이블 매핑  -->
    <resultMap id="userResultMap" type="com.codular.domain.user.User">
        <id property="id" column="id" />
        <result property="email" column="email" />
        <result property="nickname" column="nickname" />
        <result property="profileUrl" column="profileUrl"/>
        <result property="password" column="password" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <!--  회원가입  -->
    <insert id="signUp" parameterType="com.codular.domain.user.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (email, nickname, password)
        VALUES (#{email}, #{nickname}, #{password})
    </insert>

    <!--  이메일로 회원 조회  -->
    <select id="findByEmail" parameterType="string" resultMap="userResultMap">
        SELECT * FROM user WHERE email = #{email}
    </select>

    <!--  id로 회원 조회  -->
    <select id="findById" parameterType="long" resultMap="userResultMap">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <!--  이메일로 회원 존재 확인  -->
    <select id="countByEmail" parameterType="string" resultType="int">
        SELECT COUNT(1) FROM user WHERE email = #{email}
    </select>

    <!--  닉네임으로 회원 존재 확인  -->
    <select id="countByNickname" parameterType="string" resultType="int">
        SELECT COUNT(1) FROM user WHERE nickname = #{nickname}
    </select>

    <!--  id로 닉네임 조회  -->
    <select id="findNicknameById" parameterType="long" resultType="string">
        SELECT nickname FROM user WHERE id = #{id}
    </select>
    <!--  비밀번호 업데이트 -->
    <update id="updatePassword">
        UPDATE user SET password = #{password} WHERE id = #{id}
    </update>
</mapper>
